        <motor name = 'middle-finger-tip' joint = 'middle-tip'/>
        <motor name = 'pointer-finger' joint = 'pointer-joint'/>
        <motor name = 'pointer-finger-tip' joint = 'pointer-tip'/>
        <motor name = 'thumb' joint = 'thumb-joint'/>
